    <div class="login-block">
        <h1>E-commerce</h1>
        <form action="/forgot-password" method="post" id="form">
            <p style="text-align:center"> Please write your email first </p>
            <input type="text" placeholder="Email" name="email">       
        </form>
        <% if (locals.message) { %>
            <p style="color: red; text-align: center;" > <%=message.toString()%> </p>
        <%} %>  
        <button type="submit" form="form">Send Mail</button>
    </div>

